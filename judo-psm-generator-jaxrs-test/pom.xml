            <artifactId>jackson-datatype-jdk8</artifactId>
            <version>2.16.1</version>
            <scope>test</scope>
        </dependency>

    </dependencies>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>hu.blackbelt.judo.meta</groupId>
                    <artifactId>judo-psm-generator-maven-plugin</artifactId>
                    <configuration>
                        <uris>
                            <uri>mvn:hu.blackbelt.judo.generator:judo-psm-generator-jaxrs-common:${project.version}</uri>
                            <uri>mvn:hu.blackbelt.judo.generator:judo-psm-generator-jaxrs-api:${project.version}</uri>
                            <uri>mvn:hu.blackbelt.judo.generator:judo-psm-generator-jaxrs-impl:${project.version}</uri>
                            <uri>mvn:hu.blackbelt.judo.generator:judo-psm-generator-jaxrs-osgi:${project.version}</uri>
                        </uris>
                        <type>psm-jaxrs</type>
                        <contextAccessor>hu.blackbelt.judo.psm.generator.jaxrs.api.StoredVariableHelper</contextAccessor>
                        <scanPackages>
                            hu.blackbelt.judo.generator.commons,
                            hu.blackbelt.judo.psm.generator.jaxrs
                        </scanPackages>
                        <templateParameters>
                            <debugPrint>true</debugPrint>
                            <apiPrefix>hu.blackbelt.judo.psm.generator.jaxrs.test.api</apiPrefix>
                            <implPrefix>hu.blackbelt.judo.psm.generator.jaxrs.test.impl</implPrefix>
                            <osgiPrefix>hu.blackbelt.judo.psm.generator.jaxrs.test.osgi</osgiPrefix>
                            <generateOptionalTypes>true</generateOptionalTypes>
                            <generatePayloadValidator>true</generatePayloadValidator>
                            <generateOpenApiAnnotations>true</generateOpenApiAnnotations>
                        </templateParameters>
                    </configuration>
                    <dependencies>
                        <dependency>
                            <groupId>hu.blackbelt.judo.meta</groupId>
                            <artifactId>hu.blackbelt.judo.meta.psm.model.northwind</artifactId>
                            <version>${judo-meta-psm-version}</version>
                        </dependency>
                    </dependencies>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>hu.blackbelt.judo.meta</groupId>
                <artifactId>judo-psm-generator-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>execute-psm-test-model-from-artifact-northwind</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <psm>
                                mvn:hu.blackbelt.judo.meta:hu.blackbelt.judo.meta.psm.model.northwind:${judo-meta-psm-version}!northwind-psm.model
                            </psm>
                            <destination>${basedir}/target/generated-sources/psm/jaxrs/northwind</destination>
                        </configuration>
                    </execution>

                    <execution>
                        <id>execute-psm-test-model-from-artifact-Northwind-Esm</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <psm>
                                ${basedir}/src/test/resources/model/northwind-psm.model
                            </psm>
                            <destination>${basedir}/target/generated-sources/psm/jaxrs/Northwind-Esm</destination>
                        </configuration>
                    </execution>

                    <execution>
                        <id>execute-psm-test-model-from-artifact-ActionGroupTest</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <psm>
                                ${basedir}/src/test/resources/model/ActionGroupTest-psm.model
                            </psm>
                            <destination>${basedir}/target/generated-sources/psm/jaxrs/ActionGroupTest</destination>
                        </configuration>
                    </execution>

                    <execution>
                        <id>execute-psm-test-model-from-artifact-CRUDActionsTest</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <psm>
                                ${basedir}/src/test/resources/model/CRUDActionsTest-psm.model
                            </psm>
                            <destination>${basedir}/target/generated-sources/psm/jaxrs/CRUDActionsTest-psm.model</destination>
                        </configuration>
                    </execution>

                    <execution>
                        <id>execute-psm-test-model-from-artifact-DebateTest</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <psm>
                                ${basedir}/src/test/resources/model/DebateTest-psm.model
                            </psm>
                            <destination>${basedir}/target/generated-sources/psm/jaxrs/DebateTest</destination>
                        </configuration>
                    </execution>

                    <execution>
                        <id>execute-psm-test-model-from-artifact-OperationParametersTest</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <psm>
                                ${basedir}/src/test/resources/model/OperationParametersTest-psm.model
                            </psm>
                            <destination>${basedir}/target/generated-sources/psm/jaxrs/OperationParametersTest</destination>
                        </configuration>
                    </execution>

                    <execution>
                        <id>execute-psm-test-model-from-artifact-RelationTest</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <psm>
                                ${basedir}/src/test/resources/model/RelationTest-psm.model
                            </psm>
                            <destination>${basedir}/target/generated-sources/psm/jaxrs/RelationTest</destination>
                        </configuration>
                    </execution>
            </executions>
            </plugin>

