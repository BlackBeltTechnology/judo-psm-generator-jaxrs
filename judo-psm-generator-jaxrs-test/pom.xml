                                <source>${basedir}/target/generated-sources/psm/jaxrs/AuthenticationTest</source>
                                <source>${basedir}/target/generated-sources/psm/jaxrs/ApplicationSelectionTest</source>
                                <source>${basedir}/target/generated-sources/psm/jaxrs/ActionGroupTest</source>
